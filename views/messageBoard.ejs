<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MessageBoard</title>
  </head>
  <body>
    <h1>The DOJO Message Board</h1>
    <form action="/addMessage" method="post">
      <p>Name:</p>
      <p> <input type="text" name="name"> </p>
      <p>Message:</p>
      <p> <textarea name="message" rows="8" cols="80"></textarea> </p>
      <p> <input type="submit" value="Add"> </p>
    </form>
    <%for(let i in messages){%>
      <p><%=messages[i].name%></p>
      <p><%=messages[i].message%></p>
      <%if(messages[i].comments.length>0){%>
        <%for(let j in messages[i].comments){%>
          <p style='padding-left:20px;'><%=messages[i].comments[j].user_name%></p>
          <p style='padding-left:20px;'><%=messages[i].comments[j].comment%></p>
        <%}%>
      <%}%>
      <form action="/addComment/<%=messages[i]._id%>" method="post">
        <p style='padding-left:20px;'>Name:</p>
        <p style='padding-left:20px;'> <input type="text" name="user_name"> </p>
        <p style='padding-left:20px;'>Comment:</p>
        <p style='padding-left:20px;'> <textarea name="comment" rows="8" cols="80"></textarea> </p>
        <p style='padding-left:20px;'> <input type="submit" value="Add"> </p>
      </form>
    <%}%>
  </body>
</html>
